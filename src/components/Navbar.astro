      navbar.classList.remove(
        "bg-white",
        "bg-opacity-5",
        "backdrop-blur-md",
        "shadow-sm",
        "border",
        "border-gray-700",
        "max-w-5xl"
      );
      navbar.classList.add("max-w-6xl");

      // Logo styling
    }
  }

  // Run on mount and scroll
  if (typeof window !== "undefined") {
    adjustNavbar(); // Set initial state
    window.addEventListener("scroll", adjustNavbar);
  }
</script>
